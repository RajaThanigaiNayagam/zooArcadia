<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Zoo Arcadia!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
                
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </head>
    <body>
        {% include 'partials/navbar.html.twig' %}
            
        <header class="header">
            <div class="flash-message my-4">
                {% include 'partials/flash.html.twig' %}
                {% block body %}{% endblock %}
            </div>
        </header>

        <div class="clearfix"></div>
        <script type="text/javascript"> 
            let totalhabitat = parseInt( document.getElementById("totalhabitat").innerText );
            let divtotalhabitat = document.getElementById("totalhabitat");
            totalhabitat = divtotalhabitat.getAttribute("value");
            console.log( "divtotalhabitat"+divtotalhabitat );
            console.log("totalhabitat : " + totalhabitat );
            for (let i = 0; i <= totalhabitat; i++) {
                $("#habitatclick"+i+"").on( "click", function(event) { 
                    let hideorshow = document.getElementById("hideorshow"+i+"").getAttribute("value");
                    console.log("habitatclick : " + "#habitatclick"+i+"" ); 
                    console.log("hideorshow : " +hideorshow ); 
                    if ( hideorshow =="hide") {
                        document.getElementById("habitat"+i+"").style.visibility = "collapse"; 
                        document.getElementById("hideorshow"+i+"").setAttribute("value", "show");
                        console.log("hideorshow : "+i+"  " + document.getElementById("hideorshow"+i+"").getAttribute("value") ); 
                    } else {
                        document.getElementById("habitat"+i+"").style.visibility = "visible"; 
                        document.getElementById("hideorshow"+i+"").setAttribute("value", "hide");
                        console.log("hideorshow : "+i+"  " + document.getElementById("hideorshow"+i+"").getAttribute("value") ); 
                    }
                } );
            }

        </script>
    </body>
</html>
