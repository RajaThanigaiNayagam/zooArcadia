{% extends 'base.html.twig' %}

{% block title %}Rapport créé par l'employé{% endblock %}

{% block body %}
    <h1>Rapport créé par l'employé</h1>

    <div class="datatable">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ rapport_employee.id }}</td>
                </tr>
                <tr>
                    <th>Nourriture</th>
                    <td>{{ rapport_employee.nourriture }}</td>
                </tr>
                <tr>
                    <th>Rapport créé à</th>
                    <td>{{ rapport_employee.createdAt ? rapport_employee.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Quantité</th>
                    <td>{{ rapport_employee.quantity }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_employee_rapport_index') }}"><button class="btn btn-outline-light my-3">Retour à la liste</button></a>

    <a href="{{ path('app_employee_rapport_edit', {'id': rapport_employee.id}) }}"><button class="btn btn-outline-light my-3">Modifier</button></a>

    {{ include('employee/rapport/_delete_form.html.twig') }}
{% endblock %}
