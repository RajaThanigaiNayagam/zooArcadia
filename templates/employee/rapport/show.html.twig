{% extends 'base.html.twig' %}

{% block title %}Rapport créé par l'employé{% endblock %}

{% block body %}
    <h1>Rapport créé par l'employé</h1>

    <div class="table-responsive datatable">
        <div class="avis_section"><h6>Date et heure actuelles - {{ "now"|date("m/d/Y - H:i") }}</h6></div>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ rapport_employee.id }}</td>
                </tr>
                <tr>
                    <th>Nourriture</th>
                    <td>{{ rapport_employee.nourriture }}</td>
                </tr>
                <tr>
                    <th>Rapport créé à</th>
                    <td>{{ rapport_employee.createdAt ? rapport_employee.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Quantité</th>
                    <td>{{ rapport_employee.quantity }}</td>
                </tr>
            </tbody>
        </table>

        <div><a href="{{ path('app_employee_rapport_index') }}"><button class="btn btn-outline-success my-2">Retour à la liste</button></a></div>

        <div><a href="{{ path('app_employee_rapport_edit', {'id': rapport_employee.id}) }}"><button class="btn btn-outline-success my-2">Modifier</button></a></div>

        {{ include('employee/rapport/_delete_form.html.twig') }}
    </div>
{% endblock %}
