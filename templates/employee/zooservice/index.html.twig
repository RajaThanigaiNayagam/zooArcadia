{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <h1>Service index</h1>
    <div>
        <form>
            <div style="display: inline-block; margin-right:10px;"><label for="fname">Nombre d'enregistrement</label><br></div>
            <div style="display: inline-block; margin-right:10px;"><input style="width: 2em" type="text" id="limit" name="limit"><br></div>
            <div style="display: inline-block; margin-right:10px;"><input type="submit" value="Submit"></div>
        </form> 
    </div>

    <div class="table-responsive datatable">
        <table class="table table-bordered border-success">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for service in services %}
                <tr>
                    <td>{{ service.id }}</td>
                    <td>{{ service.nom }}</td>
                    <td>{{ service.description }}</td>
                    <td>
                        <a href="{{ path('app_employee_service_show', {'id': service.id}) }}"><button class="btn btn-outline-success">View</button></a>
                        <a href="{{ path('app_employee_service_edit', {'id': service.id}) }}"><button class="btn btn-outline-success">Modifier</button></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    
        <div class="pagination">
            {{ knp_pagination_render(services) }}
        </div>

        <a href="{{ path('app_employee_service_new') }}"><button class="btn btn-outline-success my-3">Créer nouveau</button></a>
    </div>
{% endblock %}
