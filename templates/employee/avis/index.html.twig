{% extends 'base.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block body %}
    <h1>Avis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Commentaire</th>
                <th>IsVisible</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td>{{ avi.id }}</td>
                <td>{{ avi.pseudo }}</td>
                <td>{{ avi.commentaire }}</td>
                <td>{{ avi.isVisible ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_employee_avis_show', {'id': avi.id}) }}"><button class="btn btn-outline-success">View</button></a>
                    <a href="{{ path('app_employee_avis_edit', {'id': avi.id}) }}"><button class="btn btn-outline-success">Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!--<a href="{{ path('app_employee_avis_new') }}"><button class="btn btn-outline-dark my-3">Créer nouveau</button></a>-->
{% endblock %}
