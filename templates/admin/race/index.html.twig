{% extends 'base.html.twig' %}

{% block title %}Race index{% endblock %}

{% block body %}
    <h1>Race index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for race in races %}
            <tr>
                <td>{{ race.id }}</td>
                <td>{{ race.label }}</td>
                <td>
                    <a href="{{ path('app_admin_race_show', {'id': race.id}) }}"><button class="btn btn-outline-success">View</button></a>
                    <a href="{{ path('app_admin_race_edit', {'id': race.id}) }}"><button class="btn btn-outline-success">Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_race_new') }}"><button class="btn btn-outline-dark">Créer nouveau</button></a>
{% endblock %}
