{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}
<div class="datatable">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes déjà connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
            </div>
        {% endif %}

        <h1>Seul le personnel du zoo peut se connecter...</h1>
        <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
        <div>
            <label for="inputUsername" style="color: #105030;">Entrez le nom d'utilisateur ou l'e-mail</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
        </div>
        <div>
            <label for="inputPassword" style="color: #105030;">Entrez le mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary my-3" type="submit">
            Me connecter
        </button>
        <!--<p> <a href="#"><button class="btn btn-outline-success my-3">Mot de passe oublié</button></a></p>
        <p>Pas encore inscrit(e) <a href="#"><button class="btn btn-outline-success my-3">M'inscrire</button></a></p>-->
    </form>
</div>
{% endblock %}
