{% extends 'base.html.twig' %}

{% block title %}Habitat des animaux{% endblock %}

{% block body %}
    <h1>Habitat des animaux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Commentaires sur l'habitat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for habitat in habitats %}
            <tr>
                <td>{{ habitat.id }}</td>
                <td>{{ habitat.nom }}</td>
                <td>{{ habitat.description }}</td>
                <td>{{ habitat.commentaireHabitat }}</td>
                <td>
                    <a href="{{ path('app_user_habitat_show', {'id': habitat.id}) }}">View</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
