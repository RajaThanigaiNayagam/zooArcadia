{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1>Inscription</h1>


    <div class="datatable-inscription">
        <h1>Inscription</h1>
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, { label: 'Nom d\'utilisateur' } ) }}
            {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' } ) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn-outline-success my-3">S"inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
    
{% endblock %}
